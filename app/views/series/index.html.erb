<p id="notice"><%= notice %></p>

<h1>Listing Series</h1>
<table class="tablesorter">
  <thead>
    <tr>
      <th>Name</th>
      <th>Provider Institution</th>
      <th>Handle</th>
      <th>Papers</th>
      <th colspan="4" class="filter-false"></th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.name %></td>
        <td><%= series.provider_institution %></td>
        <td><%= series.handle %></td>
        <td><%= series.papers.size %></td>
        <td><%= link_to 'RDF', "series/#{series.id}.rdf" %>
        <td><%= link_to 'Show', series %></td>
        <% if can? :update, series %>
          <td><%= link_to 'Edit', edit_series_path(series) %></td>
          <td><%= link_to 'Destroy', series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :update, @series %>
  <%= link_to 'New Series', new_series_path %>
<% end %>
