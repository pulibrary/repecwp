<p id="notice"><%= notice %></p>

<h1>Listing Archives</h1>

<table>
  <thead>
    <tr>
      <th>Handle</th>
      <th>Name</th>
      <th>Maintainer email</th>
      <th>Description</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @archives.each do |archive| %>
      <tr>
        <td><%= archive.handle %></td>
        <td><%= archive.name %></td>
        <td><%= archive.maintainer_email %></td>
        <td><%= archive.description %></td>
        <td><%= archive.url %></td>
        <td><%= link_to 'Show', archive %></td>
        <td><%= link_to 'Edit', edit_archive_path(archive) %></td>
        <td><%= link_to 'Destroy', archive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

